#!/bin/bash

# -e: exit on error
# -u: exit on unset variables # FIXME: NVIM_PRE_INSTALLED
set -e

{{ if eq .chezmoi.os "linux" -}}
PKGS="build-essential procps curl file git"
if ! dpkg -s $PKGS &>/dev/null; then
  sudo apt update -q
  sudo apt install -yq $PKGS
fi
{{ end -}}

{{- if eq .chezmoi.os "darwin" "linux" -}}
if ! command -v brew 2>&1 >/dev/null; then
  NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

if ! command -v brew 2>&1 >/dev/null; then
  export PATH="$PATH:$HOME/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/bin:/opt/homebrew/bin"
  eval $(brew shellenv)
fi

if command -v nvim 2>&1 >/dev/null; then
  NVIM_PRE_INSTALLED=1
fi

# do not enforce sha
unset HOMEBREW_CASK_OPTS

brew update
brew doctor || true

# FIXME: substitute casks on linux
# TODO: attribute packages, ie. ruby-build deps
brew bundle -q --file=/dev/stdin <<EOF
brew "age-plugin-yubikey"
brew "antidote" # zsh plugin manager
# brew "asitop" # apple silicon # FIXME: fails to skip cleanly on linux
brew "autoconf"
brew "bat" # better cat
brew "colordiff"
brew "eza" # better ls
brew "fzf" # fuzzy finder
brew "git"
brew "gmp"
brew "gnupg"
brew "kubernetes-cli"
brew "libyaml"
# brew "mas" # mac app store # FIXME: fails to skip cleanly on linux
brew "mise" # mise-en-place
brew "neovim"
brew "openssh"
brew "openssl@3" # FIXME: does not appear in bundle
# brew "pinentry-mac" # FIXME: fails to skip cleanly on linux
brew "rage" # better age
brew "readline" # FIXME: does not appear in bundle
brew "ripgrep"
brew "sevenzip"
brew "thefuck"
brew "tmux"
brew "uv" # python manager
brew "wakatime-cli"
brew "wget"
brew "ykman"
brew "ykpers"
brew "zsh"
cask "1password" # work
cask "1password-cli" # work
cask "alfred" # better spotlight
cask "amethyst" # tiling wm
cask "element" # matrix chat
cask "font-fira-code-nerd-font"
cask "gather"
cask "google-drive"
cask "gpg-suite"
cask "iterm2" # better terminal
cask "jordanbaird-ice" # menu bar
cask "lm-studio"
cask "lookaway" # screen breaks
cask "lulu" # firewall
cask "macwhisper"
cask "notion" # work
cask "obsidian"
cask "rewind"
cask "slack"
cask "wakatime"
cask "xscreensaver"
cask "yubico-authenticator"
cask "zoom"
cask "zulip"
mas "1Password for Safari", id: 1569813296
mas "Fantastical", id: 975937182
mas "monday.com", id: 1298450641
EOF

brew upgrade --cask --greedy
brew upgrade --greedy
brew outdated --cask --greedy --verbose
brew outdated --greedy --verbose
brew cleanup

if [ ! -d "$HOME/.oh-my-zsh" ]; then
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
fi

mise trust
mise install

if [ -z "$NVIM_PRE_INSTALLED" ]; then
  nvim --headless "+Lazy! sync" +qa
fi
{{ end -}}

