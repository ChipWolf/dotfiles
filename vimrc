set nocompatible
filetype indent plugin on
syntax on
set hidden
set wildmenu
set showcmd
set hlsearch

set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set laststatus=2
set confirm
set visualbell
set cmdheight=2
set number
set notimeout ttimeout 
set pastetoggle=<F11>

set shiftwidth=2
set softtabstop=2
set expandtab

map Y y$
nnoremap <C-L> :nohl<CR><C-L>
